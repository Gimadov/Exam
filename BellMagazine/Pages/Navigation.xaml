<Page x:Class="BellMagazine.Pages.Navigation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BellMagazine.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Navigation" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="167" VerticalAlignment="Center">
            <TextBlock Text="Login" TextAlignment="Center" />
            <TextBox x:Name="TbLogin" Margin="5"/>
            <TextBlock Text="Password" TextAlignment="Center" />
            <PasswordBox x:Name="TbPassword" Margin="5"/>
            <Button x:Name="BauAutorization" Click="BauAutorization_Click" Content="Enter" IsDefault="True" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
