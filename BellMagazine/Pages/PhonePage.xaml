<Page x:Class="BellMagazine.Pages.PhonePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BellMagazine.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PhonePage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto">
            </RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Margin="5" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" x:Name="DGPhone">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name.FullName}"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone.FullName}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Cost.FullName}"/>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Page>
